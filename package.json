{
  "name": "electron-ib-book-downloader",
  "version": "1.1.2",
  "description": "Una aplicación para descargar libros y convertirlos a PDF.",
  "main": "main.js",
  "author": {
    "name": "Emilio Cuenca",
    "email": "emilio.sebastianc@gmail.com"
  },
  "homepage": "https://github.com/cripsitorey/pondukay",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.example.bookdownloader",
    "productName": "IB Book Downloader (by Crip)",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "cripsitorey",
        "repo": "ibookdown"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "license": "license.txt"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "maintainer": "Emilio Cuenca <emilio.sebastianc@gmail.com>",
      "category": "Utility",
      "description": "Una aplicación para descargar libros y convertirlos a PDF."
    }
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-updater": "^6.3.9",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.1.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^25.0.0"
  }
}
